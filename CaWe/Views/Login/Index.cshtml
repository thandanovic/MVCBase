    @Html.HiddenFor(model => model.AlertMessage)
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                   
                        <div class="logo" role="img"></div>
                  
                    <div class="panel-body">
                        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Email, new { @class = "hidden" })
                                    @Html.ValidationMessageFor(model => model.Email)
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", placeholder = "E-mail" })
                                </div>
                               
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Password, new { @class = "hidden" })
                                    @Html.ValidationMessageFor(model => model.Password)
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
                                </div>
                                
                                <div class="form-group checkbox">
                                    @Html.LabelFor(model => model.RememberMe)
                                    @Html.ValidationMessageFor(model => model.RememberMe)
                                    @Html.CheckBoxFor(model => model.RememberMe)
                                </div>

                                <input type="submit" class="btn btn-lg btn-success btn-block alert-location" value="Login" />
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
