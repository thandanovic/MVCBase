<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CaWe - @ViewBag.Title</title>
    @Styles.Render("~/css/bootstrap")
    @Styles.Render("~/css/shared")
    @Scripts.Render("~/modernizr")
</head>
<body>

    <div class="container body-content no-padding-rg">
        <div class="col-lg-12 menu-container no-padding-rg">
            <nav class="navbar navbar-light">
                <div class="container-fluid no-padding-rg">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">

                        <a href="@Url.Action("Index", "Home")"><div class="logo-menu" role="img"></div></a>
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu-navbar" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="menu-navbar">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="@Url.Action("Index", "Home")">Home <span class="sr-only">(current)</span></a></li>
                            <li><a href="@Url.Action("How", "Home")">How</a></li>
                            <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                        </ul>
                        
                     <a href="@Url.Action("Register", "Home")" class="pull-right margin-top-35">Register</a>
                     <span class="margin-right-10 margin-left-10 margin-top-35 pull-right">|</span>
                     <a href="@Url.Action("Index", "Login")" class="pull-right margin-top-35">Login</a>


                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        </div>
        <div class="container container-content">
            @RenderBody()
        </div>

        <footer>
            <hr class="style-one" />

        </footer>
    </div>

    @Scripts.Render("~/jquery")
    @Scripts.Render("~/jqueryval")
    @Scripts.Render("~/js/bootstrap")
    @Scripts.Render("~/js/shared")
    @RenderSection("scripts", required: false)
</body>
</html>